<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:orientation="horizontal"
	android:id="@+id/basicListItemLayout" android:layout_height="wrap_content"
	android:minHeight="?android:attr/listPreferredItemHeight">

	<LinearLayout android:id="@+id/basicListItemTitleLayout"
		android:focusable="false" android:focusableInTouchMode="false"
		android:layout_width="fill_parent" android:minHeight="50dip"
		android:layout_weight="2" android:layout_height="fill_parent">
		<TextView android:layout_width="fill_parent"
			android:ellipsize="end" android:id="@+id/basicListItemTitle"
			android:layout_gravity="center_vertical" android:layout_height="wrap_content"
			android:text="Title" android:focusable="false"
			android:focusableInTouchMode="false" android:textAppearance="?android:attr/textAppearanceLarge"
			android:paddingLeft="6dip" android:paddingRight="6dip">
		</TextView>
	</LinearLayout>




	<LinearLayout android:layout_height="wrap_content"
		android:layout_gravity="center_vertical" android:focusable="false"
		android:focusableInTouchMode="false" android:layout_width="fill_parent"
		android:layout_weight="2" android:id="@+id/basicListItemStatLayout">
		<TextView android:layout_height="wrap_content"
			android:ellipsize="end" android:id="@+id/basicListItemStat"
			android:paddingLeft="6dip" android:paddingRight="6dip"
			android:layout_gravity="center_vertical" android:text="information"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:focusable="false" android:focusableInTouchMode="false"
			android:layout_width="fill_parent" android:gravity="left"
			android:textSize="17dip" android:maxLines="2">
		</TextView>
	</LinearLayout>


</LinearLayout>
