<LinearLayout android:layout_width="wrap_content"
	android:layout_height="wrap_content" android:orientation="vertical" android:layout_marginTop="5dip" xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/PickerLayout">
	<Button android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:id="@+id/PickerPlusButton" android:focusable="true" android:background="@drawable/timepicker_up_btn"></Button>
	<EditText android:layout_height="wrap_content" android:singleLine="true" android:textAppearance="?android:attr/textAppearanceLargeInverse"
		android:textSize="30sp" android:layout_width="fill_parent"
		android:gravity="center" android:numeric="integer" android:maxLength="3" android:id="@+id/PickerEditText" android:focusable="false" android:focusableInTouchMode="false" android:background="@drawable/timepicker_input"></EditText>
	<Button android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:id="@+id/PickerMinusButton" android:background="@drawable/timepicker_down_btn"></Button>
</LinearLayout>

